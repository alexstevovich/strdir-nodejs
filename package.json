{
    "name": "strdir",
    "version": "1.0.0",
    "homepage": "https://alexstevovich.com/r/strdir-nodejs",
    "author": {
        "name": "Alex Stevovich",
        "email": "dev@alexstevovich.com",
        "url": "https://alexstevovich.com"
    },
    "description": "Aggregates file contents in a directory into a string, with optional recursive walking and extension filtering",
    "type": "module",
    "main": "./src/index.js",
    "files": [
        "./src"
    ],
    "license": "MIT",
    "scripts": {
        "poshify": "npx poshify",
        "pretty": "npx prettier --write .",
        "lint": "eslint ./src/",
        "lint:fix": "eslint --fix ./src/",
        "test": "npx vitest --run",
        "build": "npm run poshify && npm run pretty && npm run lint:fix && npm run lint"
    },
    "keywords": [
        "file",
        "directory",
        "recursive",
        "file-reading",
        "aggregation",
        "nodejs",
        "sync",
        "async",
        "utility",
        "strdir"
    ],
    "devDependencies": {
        "eslint": "^9.36.0",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-prettier": "^5.5.4",
        "prettier": "^3.6.2",
        "vitest": "^4.0.4"
    }
}
